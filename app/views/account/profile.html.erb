<% content_for :title, current_user.first_name + "'s Profile" %>
<% content_for :dash, "1" %>
<!-- Wrapper -->
  <div id="wrapper">

    <%= render 'partials/dash_nav' %>

    <!-- Main -->
      <div id="main">
        <div class="inner">
          <header>
            <h1><span id="user"><%= current_user.first_name %></span>'s Profile</h1>
            <p>Time to update your details?</p>
          </header>
          <section>
								<form action="javascript:void(0);">
									<div class="field half first">
                    <%= text_field_tag :first_name, "", :placeholder => current_user.first_name %>
									</div>
									<div class="field half">
										<%= text_field_tag :last_name, "", :placeholder => current_user.last_name %>
									</div>
                  <div class="field half first">
										<%= text_field_tag :email, "", :placeholder => current_user.email %>
									</div>
                  <div class="field half">
										<%= password_field_tag :password, "", :placeholder => "New Password" %>
									</div>
                  <div class="half" id="status">

									</div>
									<ul class="actions">
										<li><input type="submit" value="Update" class="special" /></li>
									</ul>
								</form>
							</section>

        </div>
      </div>

  </div>

  <%= render "partials/dash_scripts" %>
