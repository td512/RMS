<%= content_for :dash, "1" %>
<%= content_for :title, "Manage Your Posts" %>
<!-- Wrapper -->
  <div id="wrapper">
    <%= render 'partials/dash_nav' %>

    <!-- Main -->
   <div id="main">
     <div class="inner">
       <header>
         <h1>Manage Your Header Links</h1>
         <a href="<%= addlink_path %>"><%= submit_tag "Add", :class => "button special small" %></a>
       </header>
       <br />
       <section>
         <div class="table-wrapper">
           <table class="alt">
             <thead>
               <tr>
                 <th>Title</th>
                 <th>URL</th>
                 <th>Actions</th>
               </tr>
             </thead>
             <tbody>
               <% Link.all.each do |l| %>
               <tr>
                 <th><%= l.title %></th>
                 <th><%= l.url %></th>
                 <th><%= link_to "Remove", linkdelete_path(l.id)%></th>
               </tr>
               <% end %>
             </tbody>
           </table>
         </div>
         <%= render "partials/dash_scripts" %>
