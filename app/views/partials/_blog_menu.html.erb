<!-- Menu -->
  <section id="menu">

    <!-- Search -->
      <section>
        <form class="search" method="get" action="/search">
          <input type="text" name="q" placeholder="Search" autocomplete="off" />
        </form>
      </section>

    <!-- Links -->
      <section>
        <ul class="links">
          <% if current_user && current_user.level == "0" %>
          <li>
            <a href="<%= account_path %>">
              <h3>Your Account</h3>
              <p>Manage your account here</p>
            </a>
          </li><% end %>
          <% Menu.all.each do |m| %>
          <li>
            <a href="<%= m.url %>">
              <h3><%= m.title %></h3>
              <p><%= m.subtitle %></p>
            </a>
          </li><% end %>
        </ul>
      </section>

    <!-- Actions -->
      <section>
        <ul class="actions vertical">
          <% if current_user && current_user.level == "1" %>
          <li><a href="<%= dash_path %>" class="button big fit">Dashboard</a></li>
          <% elsif current_user && current_user.level == "0" %>
          <li><a href="<%= logout_path %>" class="button big fit">Log Out</a></li>
          <% else %>
          <li><a href="<%= login_path %>" class="button big fit">Log In</a></li>
          <% end %>
        </ul>
      </section>

  </section>
