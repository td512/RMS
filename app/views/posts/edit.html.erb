<%= content_for :dash, "1" %>
<%= content_for :title, "Write a post" %>
<!-- Wrapper -->
  <div id="wrapper">
    <%= render 'partials/dash_nav' %>

    <!-- Main -->
      <div id="main">
        <div class="inner">

          <header>
            <h1>Time to write a post?</h1>
          </header>
          <%= form_for(:write, url: update_path(params[:id])) do |f| %>
          <div class="field half first">
            <%= f.text_field :title, :placeholder => Post.find_by(id: params[:id]).post_title %>
            </div>
          <div class="field half">
          <%= f.text_field :subtitle, :placeholder => Post.find_by(id: params[:id]).post_subtitle %>
        </div>
        <br /><br />
          <%= f.text_area :content, :class => "editor", :value => Post.find_by(id: params[:id]).post_body %>
          <br />
          <div class="field half first">
          <%= f.text_field :tags, :placeholder => Post.find_by(id: params[:id]).post_category %>
          </div>
          <div class="field half">
          <%= f.submit "Update", :class => "special" %>
        </div>
          <% end %>
        </div>
      </div>
    </div>
    <!-- Scripts -->
      <script>
      <%= render 'phantom/jquery' %>
      </script>
      <script>
      <%= render 'phantom/skel' %>
      </script>
      <script>
      <%= render 'phantom/util' %>
      </script>
      <!--[if lte IE 8]>
      <script>
      <%= render 'phantom/respond' %>
      </script>
      <![endif]-->
      <script>
      <%= render 'phantom/main' %>
      </script>
      <script src="https://cloud.tinymce.com/stable/tinymce.min.js?apiKey=0cwvfj5tlb6zemm583zhp3isxiua8qaboo71uiha6eceyy9k"></script>
      <script>
      tinymce.init({
        selector: "textarea.editor",
        branding: false,
        height: 350,
        menubar: false,
        plugins: [
          'advlist autolink lists link image charmap print preview anchor',
          'searchreplace visualblocks code fullscreen',
          'insertdatetime media table contextmenu paste code'
        ],
        toolbar: 'undo redo | insert | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image',
        content_css: [
          '//fonts.googleapis.com/css?family=Lato:300,300i,400,400i',
          '//www.tinymce.com/css/codepen.min.css']
      });
      </script>
